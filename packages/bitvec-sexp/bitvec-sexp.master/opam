license: "MIT"
build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-bitvec-sexp"]
  [make]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "bitvec-sexp"]]

depends: [
  "ocaml" {>= "4.07.0" & < "4.10.0"}
  "oasis" {build & >= "0.4.7"}
  "bitvec"
  "sexplib0"
]
synopsis: "Sexp serializers for Bitvec"
