remove: [["ocamlfind" "remove" "bap-plugin-radare2"]
	 ["bapbundle" "remove" "radare2.plugin"]
]
depends: [
  "ocaml" {>= "4.07.0" & < "4.10.0"}
  "bap-std" {= "master"}
  "bap-core-theory"
  "bap-future"
  "bap-knowledge"
  "bap-relation"
  "bitvec"
  "core_kernel" {>= "v0.12" & < "v0.13"}
  "conf-radare2"
  "re"
  "yojson"
  "zarith"
]
