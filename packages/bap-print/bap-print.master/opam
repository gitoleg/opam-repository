license: "MIT"
build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-print"]
  [make]
]

install: [[make "install"]]

remove: [
        ["ocamlfind" "remove" "bap-plugin-print"]
        ["bapbundle" "remove" "print.plugin"]

        ]

depends: [
  "ocaml" {>= "4.07.0" & < "4.10.0"}
  "bap-std" {= "master"}
  "bap-demangle"
  "text-tags"
]
